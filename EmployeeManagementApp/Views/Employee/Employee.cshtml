@model IEnumerable<EmployeeManagementApp.Data.Context.Employee>
@{
    ViewBag.Title = "Employee";
}

<main aria-labelledby="title">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>Employees</h2>
        </div>
        <div class="col-md-6 text-end">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createEmployeeModal">
                <i class="glyphicon glyphicon-plus"></i> Create Employee
            </button>
        </div>
    </div>

    <!-- Alert Messages -->
    <div id="alertContainer"></div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-hover" id="employeeTable">
                <thead class="table-dark">
                    <tr>
                        <th>Employee ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Job Position</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var employee in Model)
                        {
                            <tr>
                                <td>@employee.EmployeeId</td>
                                <td>@employee.Name</td>
                                <td>@employee.Email</td>
                                <td>@employee.JobPosition</td>
                                <td>@employee.CreatedAt.ToString("MM/dd/yyyy")</td>
                                <td>
                                    <button class="btn btn-sm btn-info btn-edit" data-id="@employee.EmployeeId">Edit</button>
                                    <button class="btn btn-sm btn-danger btn-delete" data-id="@employee.EmployeeId">Delete</button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr id="noDataRow">
                            <td colspan="6" class="text-center">No employees found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Create Employee Modal -->
    <div class="modal fade" id="createEmployeeModal" tabindex="-1" aria-labelledby="createEmployeeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="createEmployeeForm">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title" id="createEmployeeModalLabel">Create New Employee</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group mb-3">
                            <label for="Name">Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="Name" name="Name" required />
                            <span class="text-danger" id="nameError"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="Email">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="Email" name="Email" required />
                            <span class="text-danger" id="emailError"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="JobPosition">Job Position <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="JobPosition" name="JobPosition" required />
                            <span class="text-danger" id="jobPositionError"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" id="btnCreate">
                            <span class="spinner-border spinner-border-sm d-none" id="loadingSpinner"></span>
                            Create Employee
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Employee Modal -->
    <div class="modal fade" id="editEmployeeModal" tabindex="-1" aria-labelledby="editEmployeeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="editEmployeeForm">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title" id="editEmployeeModalLabel">Edit Employee</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" id="EditEmployeeId" name="EmployeeId" />
                        <div class="form-group mb-3">
                            <label for="EditName">Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="EditName" name="Name" required />
                            <span class="text-danger" id="editNameError"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="EditEmail">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="EditEmail" name="Email" required />
                            <span class="text-danger" id="editEmailError"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label for="EditJobPosition">Job Position <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="EditJobPosition" name="JobPosition" required />
                            <span class="text-danger" id="editJobPositionError"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" id="btnUpdate">
                            <span class="spinner-border spinner-border-sm d-none" id="updateLoadingSpinner"></span>
                            Update Employee
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section scripts {
    <script>
        $(document).ready(function () {
            // Email validation function
            function isValidEmail(email) {
                var emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                return emailRegex.test(email);
            }

            // Show alert messages
            function showAlert(type, message) {
                var alertHtml = '<div class="alert alert-' + type + ' alert-dismissible fade show" role="alert">' +
                    message +
                    '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>' +
                    '</div>';
                $('#alertContainer').html(alertHtml);

                // Auto-hide alert after 5 seconds
                setTimeout(function () {
                    $('.alert').fadeOut('slow', function () {
                        $(this).remove();
                    });
                }, 5000);
            }

            // Handle create button click (instead of form submit)
            $('#btnCreate').on('click', function (e) {
                debugger;
                e.preventDefault();

                // Clear previous errors
                $('.text-danger').text('');

                // Get form data
                var formData = {
                    Name: $('#Name').val().trim(),
                    Email: $('#Email').val().trim(),
                    JobPosition: $('#JobPosition').val().trim(),
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                };

                // Client-side validation
                var isValid = true;
                if (!formData.Name) {
                    $('#nameError').text('Name is required.');
                    isValid = false;
                }
                if (!formData.Email) {
                    $('#emailError').text('Email is required.');
                    isValid = false;
                } else if (!isValidEmail(formData.Email)) {
                    $('#emailError').text('Please enter a valid email address.');
                    isValid = false;
                }
                if (!formData.JobPosition) {
                    $('#jobPositionError').text('Job Position is required.');
                    isValid = false;
                }

                if (!isValid) return;

                // Show loading spinner
                $('#loadingSpinner').removeClass('d-none');
                $('#btnCreate').prop('disabled', true);

                // Submit via AJAX
                $.ajax({
                    url: '@Url.Action("Create", "Employee")',
                    type: 'POST',
                    data: formData,
                    dataType: 'json',
                    success: function (response) {
                        debugger;
                        if (response.success) {
                            showAlert('success', response.message);

                            // Close modal (Bootstrap 5)
                            var modalEl = $('#createEmployeeModal');
                            modalEl.modal('hide');

                            // Reset form
                            $('#createEmployeeForm')[0].reset();

                            // Refresh to show new data (or inject row via JS)
                            setTimeout(function () {
                                location.reload();
                            }, 800);
                        } else {
                            showAlert('danger', response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        debugger;
                        showAlert('danger', 'An error occurred while creating the employee. Please try again.');
                        console.error('Error:', error);
                    },
                    complete: function () {
                        debugger;
                        $('#loadingSpinner').addClass('d-none');
                        $('#btnCreate').prop('disabled', false);
                    }
                });
            });




        $(document).on('click', '.btn-edit', function (e) {
    e.preventDefault();

    var employeeId = $(this).data('id');

    // Clear previous errors
    $('#editEmployeeForm .text-danger').text('');

    // Show loading state
    $(this).prop('disabled', true).html('<i class="glyphicon glyphicon-refresh spinning"></i> Loading...');
    var $btn = $(this);

    // Get employee data
    $.ajax({
        url: '@Url.Action("GetEmployee", "Employee")',
        type: 'GET',
        data: { id: employeeId },
        dataType: 'json',
        success: function (response) {
            if (response.success) {
                // Populate the edit form
                $('#EditEmployeeId').val(response.data.employeeId);
                $('#EditName').val(response.data.name);
                $('#EditEmail').val(response.data.email);
                $('#EditJobPosition').val(response.data.jobPosition);

                // Show the modal
                $('#editEmployeeModal').modal('show');
            } else {
                showAlert('danger', response.message);
            }
        },
        error: function (xhr, status, error) {
            showAlert('danger', 'An error occurred while loading employee data. Please try again.');
            console.error('Error:', error);
        },
        complete: function () {
            $btn.prop('disabled', false).html('<i class="glyphicon glyphicon-edit"></i> Edit');
        }
    });
});

$('#btnUpdate').on('click', function (e) {
    e.preventDefault();

    // Clear previous errors
    $('#editEmployeeForm .text-danger').text('');

    // Get form data
    var formData = {
        EmployeeId: $('#EditEmployeeId').val(),
        Name: $('#EditName').val().trim(),
        Email: $('#EditEmail').val().trim(),
        JobPosition: $('#EditJobPosition').val().trim(),
        __RequestVerificationToken: $('#editEmployeeForm input[name="__RequestVerificationToken"]').val()
    };

    // Client-side validation
    var isValid = true;
    if (!formData.Name) {
        $('#editNameError').text('Name is required.');
        isValid = false;
    }
    if (!formData.Email) {
        $('#editEmailError').text('Email is required.');
        isValid = false;
    } else if (!isValidEmail(formData.Email)) {
        $('#editEmailError').text('Please enter a valid email address.');
        isValid = false;
    }
    if (!formData.JobPosition) {
        $('#editJobPositionError').text('Job Position is required.');
        isValid = false;
    }

    if (!isValid) return;

    // Show loading spinner
    $('#updateLoadingSpinner').removeClass('d-none');
    $('#btnUpdate').prop('disabled', true);

    // Submit via AJAX
    $.ajax({
        url: '@Url.Action("Update", "Employee")',
        type: 'POST',
        data: formData,
        dataType: 'json',
        success: function (response) {
            if (response.success) {
                showAlert('success', response.message);

                // Close modal
                $('#editEmployeeModal').modal('hide');

                // Update the table row without reloading
                var $row = $('tr[data-employee-id="' + formData.EmployeeId + '"]');
                $row.find('.employee-name').text(formData.Name);
                $row.find('.employee-email').text(formData.Email);
                $row.find('.employee-position').text(formData.JobPosition);
                
                // Highlight the updated row
                $row.addClass('table-success');
                setTimeout(function () {
                    $row.removeClass('table-success');
                }, 2000);

                // Refresh to show new data (or inject row via JS)
                setTimeout(function () {
                    location.reload();
                }, 800);

            } else {
                showAlert('danger', response.message);
            }
        },
        error: function (xhr, status, error) {
            showAlert('danger', 'An error occurred while updating the employee. Please try again.');
            console.error('Error:', error);
        },
        complete: function () {
            $('#updateLoadingSpinner').addClass('d-none');
            $('#btnUpdate').prop('disabled', false);
        }
    });
});



            $(document).on('click', '.btn-delete', function (e) {
                debugger;
    e.preventDefault();

    var employeeId = $(this).data('id');
    var $row = $(this).closest('tr');

    // Show confirmation dialog
    if (!confirm('Are you sure you want to delete this employee?')) {
        return;
    }

    // Disable button during request
    $(this).prop('disabled', true);

    $.ajax({
        url: '@Url.Action("Delete", "Employee")/' + employeeId,
        type: 'POST',
        dataType: 'json',
        success: function (response) {
            if (response.success) {
                showAlert('success', response.message);

                // Remove the row from table
                $row.fadeOut(400, function() {
                    $(this).remove();

                    // Check if table is empty
                    if ($('#employeeTable tbody tr').length === 0) {
                        $('#employeeTable tbody').html('<tr id="noDataRow"><td colspan="6" class="text-center">No employees found.</td></tr>');
                    }
                });

                // Refresh to show new data (or inject row via JS)
                setTimeout(function () {
                    location.reload();
                }, 800);

            } else {
                showAlert('danger', response.message);
                $(this).prop('disabled', false);
            }
        },
        error: function (xhr, status, error) {
            showAlert('danger', 'An error occurred while deleting the employee. Please try again.');
            console.error('Error:', error);
            $(this).prop('disabled', false);
        }
    });
});

            // Reset form and errors when modal is closed
            $('#createEmployeeModal').on('hidden.bs.modal', function () {
                $('#createEmployeeForm')[0].reset();
                $('.text-danger').text('');
            });
        });
    </script>
}